    "def solution(price, money, count):\n",
    "    total=0\n",
    "    for i in range(count):\n",
    "        total+=(price*i)\n",
    "        \n",
    "    lack=money-total\n",
    "    if lack>=0:\n",
    "        return 0\n",
    "    else:\n",
    "        return abs(lack)"
